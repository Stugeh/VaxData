{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "../build/",
        "module": "commonjs",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "es2019",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "jspm_packages",
        "utils/migrate.js",
        "__tests__/utils/migrate.js"
    ],
}